<% language_tabs = current_page.data.language_tabs || [] %>
<% page_content = yield %>
<%
  if current_page.data.includes
    current_page.data.includes.each do |include|
      page_content += partial("includes/#{include}")
    end
  end
%>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "API Documentation" %></title>

    <script type="text/javascript" >
      (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
        m[i].l=1*new Date();k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
      (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");

      ym(80948653, "init", {
        clickmap:true,
        trackLinks:true,
        accurateTrackBounce:true
      });
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/80948653" style="position:absolute; left:-9999px;" alt="" /></div></noscript>

    <style>
      <%= Rouge::Themes::MonokaiSublime.render(:scope => '.highlight') %>
    </style>
    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :print, media: :print %>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>
    <%= javascript_include_tag  "global_index" %>
    <script>document.pathToRoot = '..'</script>
  </head>

  <body class="<%= page_classes %>" data-languages="<%=h language_tabs.map{ |lang| lang.is_a?(Hash) ? lang.keys.first : lang }.to_json %>">
    <a href="#" id="nav-button">
          <span>
            <%= image_tag('navbar.svg') %>
          </span>
    </a>
    <div class="toc-wrapper">
      <%= image_tag "logo.svg", class: 'logo' %>
      <% if current_page.data.search %>
        <div class="search">
          <%= image_tag "search.svg", class: 'loupe' %>
          <input type="text" class="search" id="input-search" placeholder="По ключевому слову">
        </div>
        <ul class="search-results"></ul>
      <% end %>
      <ul id="toc" class="toc-list-h1">
        <li class="toc-other-page">
          <a href="../" class="toc-h1 toc-link">МойСклад JSON API</a>
        </li>
        <li class="toc-other-page">
          <a href="../dictionaries/" class="toc-h1 toc-link">Сущности</a>
        </li>
        <li class="toc-other-page">
          <a href="../documents/" class="toc-h1 toc-link">Документы</a>
        </li>
        <li class="toc-other-page">
          <a href="../reports/" class="toc-h1 toc-link">Отчеты</a>
        </li>
        <li class="toc-other-page">
          <a href="../other/#audit" class="toc-h1 toc-link">Аудит</a>
        </li>
        <li class="toc-other-page">
          <a href="../other/#uwedomleniq" class="toc-h1 toc-link">Уведомления</a>
        </li>
        <% toc_data(page_content).each do |h1| %>
          <li class="toc-list-h1-title">
            <a href="#<%= h1[:id] %>" class="toc-h1 toc-link" data-title="<%=h h1[:title] %>"><%=h h1[:content] %></a>
            <% if h1[:children].any? %>
              <% h1[:children].each do |h2| %>
              <li>
                <div class="second-border">
                  <a href="#<%= h2[:id] %>" class="toc-h2 toc-link" data-title="<%=h h2[:title] %>"><%=h h2[:content] %></a>
                  <% if h2[:children].any? %>
                    <ul class="toc-list-h3">
                      <% h2[:children].each do |h3| %>
                        <li>
                          <a href="#<%= h3[:id] %>" class="toc-h3 toc-link" data-title="<%=h h3[:title] %>"><%=h h3[:content] %></a>
                        </li>
                      <% end %>
                    </ul>
                  <% end %>
                </div>
              </li>
            <% end %>
          <% end %>
          </li>
        <% end %>
        <li class="toc-other-page">
          <a href="../changelog/" class="toc-h1 toc-link">Список изменений</a>
        </li>
      </ul>
      <% if current_page.data.toc_footers %>
        <ul class="toc-footer">
          <% current_page.data.toc_footers.each do |footer| %>
            <li><%= footer %>
              <%= image_tag "arrow-footer.svg", class: 'arrow-footer' %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="page-wrapper">
      <div class="content">
        <%= page_content %>
      </div>
    </div>
  </body>
</html>
